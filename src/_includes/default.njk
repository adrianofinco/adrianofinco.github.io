# enforce
---
<!doctype html>
<html lang="{{ lang }}">
{% set translate = lang | language %}
<head>
  <meta charset="utf-8"/>
  <title>Adriano Lourenço</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height"/>
  <!-- latin regular, semibold, bold -->
  <link rel="preload" as="font" crossorigin="anonymous" type="font/woff2" href="https://fonts.gstatic.com/s/nunito/v16/XRXV3I6Li01BKofINeaB.woff2"/>
  <link rel="preload" as="font" crossorigin="anonymous" type="font/woff2" href="https://fonts.gstatic.com/s/nunito/v16/XRXW3I6Li01BKofAjsOUYevI.woff2"/>
  <link rel="stylesheet" href="/app.css" />

  <meta name="description" content="{{ translate['description'] }}"/>
  <link rel="alternate" hreflang="en" href="/" />
  <link rel="alternate" hreflang="pt" href="/pt/" />
</head>
<body>
  <div id="root" class="min-h-screen flex flex-col">
    <header id="header" class="p-4 text-center">
      <h1 class="font-bold text-2xl sm:mb-2">
        <a href="{{ page.url }}">Adriano Lourenço</a>
      </h1>
    </header>
    <main id="main" class="mt-4 flex-grow">
      <section class="container text-lg max-w-2xl mx-auto pb-6 lg:pb-12">
        <h2 class="text-2xl mb-2 lg:mb-4">{{ translate['heading'] }}</h2>
        <p class="text-lg text-gray-800 font-mono mb-2 lg:mb-4">/aad•ree•aa•no/</p>
        <p class="mb-2">{{ translate['intro-1'] }}</p>
        <p class="mb-2">{{ translate['intro-2'] }}</p>
        <p class="mb-2">{{ translate['intro-3'] }}</p>
      </section>

      {% for proj in projects %}
      <section id="{{ 'projects' if loop.first }}" class="py-6 lg:py-12 {{ 'bg-gray-200' if loop.index % 2 != 0 }}">
        <div class="container max-w-4xl flex flex-col">
          <header class="flex flex-col items-center mx-auto">
            {% if proj.logo %}
            <img class="w-10 sm:w-16" src="/img/{{ proj.logo }}">
            {% endif %}
            <h2 class="font-bold mt-2 text-3xl text-lightgrey">{{ proj.title }}</h2>
            <div>
              <a class="text-lg text-blue-600 mt-2 hover:underline mx-2" href="{{ proj.repo }}" target="_blank">{{ translate['source'] }}</a>
              <a class="text-lg text-blue-600 mt-2 hover:underline mx-2" href="{{ proj.view }}" target="_blank">{{ translate['view'] }}</a>
            </div>
          </header>
          {% if proj.image %}
          <figure class="mt-4 md:mt-8">
            <img src="/img/{{ proj.image }}" class="rounded-md shadow-lg">
          </figure>
          {% endif %}
          <summary class="mt-4 md:mt-8 ml-2 sm:ml-4 grid grid-flow-row gap-4 lg:gap-24 lg:grid-flow-col max-w-2xl lg:mx-auto text-lg text-lightgrey">  
            <div>
              <h3 class="font-bold lg:mb-4 mb-2 text-dimgrey uppercase">{{ translate['desc'] }}</h3>
              <p>{{ translate[proj.description] }}</p>
            </div>
            <div>
              <h3 class="font-bold lg:mb-4 mb-2 text-dimgrey uppercase">{{ translate['tags'] }}</h3>
              <ul class="">
                {% for tag in proj.tags %}
                <li class="">{{ tag }}</li>
                {% endfor %}
              </ul>
            </div>
          </summary>
        </div>
      </section>
      {% endfor %}
    </main>
    <hr>
    <footer id="footer" class="md:gap-10 px-4 pt-2 pb-8 grid grid-cols-1 leading-normal md:grid-flow-col md:mx-auto">
      <section>
        <h2 class="font-bold text-lg mt-2">{{ translate['contact'] }}</h2>
        <a class="text-blue-600 hover:underline" target="_blank" href="https://linkedin.com/in/adriano-lourenço">Linkedin</a> <br>
        <a class="text-blue-600 hover:underline" target="_blank" href="https://github.com/adrianofinco">Github</a> <br>
        <a class="text-blue-600 hover:underline" href="mailto:adriano.finco.509@gmail.com">adriano.finco.509@gmail.com</a> <br>
      </section>

      <section>
        <h2 class="font-bold text-lg mt-2">{{ translate['language'] }}</h2>
        <p>
          {% if lang == 'en' %}
          <a class="text-gray-600 hover:underline" href="/">English</a>
          {% else %}
          <a class="text-blue-600 hover:underline" href="/">English</a>
          {% endif %}
        </p>
        <p>
          {% if lang == 'pt' %}
          <a class="text-gray-600 hover:underline" href="/pt/">Português</a>
          {% else %}
          <a class="text-blue-600 hover:underline" href="/pt/">Português</a>
          {% endif %}
        </p>
      </section>
    </footer>
  </div>
</body>
</html>